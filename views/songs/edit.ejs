<%- include('../partials/header.ejs') %>
<div class="main-container">
    <div class="authCard animate__animated animate__flipInY">
        <h1>Edit</h1>    
        <form action="/songs/<%= song._id %>?_method=PUT" method="POST">
            <div class="inputBox">
                <input type="text" id="title" name="title" value="<%= song.title %>" required>
                <label for="title">Song Title:</label>
            </div>
            
            <div class="inputBox">
                <input type="text" id="artist" name="artist" value="<%= song.artist %>" required>
                <label for="artist">Artist:</label>
            </div>

            <div class="inputBox">
                <input type="url" id="youTubeURL" name="youTubeURL" value="<%= song.youTubeURL %>" required>
                <label for="youTubeURL">YouTubeURL:</label>
            </div>

            <div>
                <button type="submit">Update Song</button>
            </div>
        </form>
        <a class="backLink" style="font-size: 1.5vh;" href="/songs/<%= song._id %>">Cancel</a>
    </div>
</div>

<%- include('../partials/footer.ejs') %>